<routes>
    <!-- 1. 先定义车辆类型 -->
    <vType id="car"
           accel="2.6" decel="4.5" length="5.0"
           minGap="2.5" maxSpeed="70"
           color="1,0,0"
           guiShape="passenger"/>
    <vType id="truck"
           accel="1.0" decel="3.0" length="8.0"
           minGap="3.0" maxSpeed="50"
           color="0,0,1"
           guiShape="truck"/>

    <vType id="bus"
           accel="2.6" decel="4.5" length="8.0"
           minGap="2.5" maxSpeed="70"
           color="0,1,0"
           guiShape="bus"/>
    <!-- 路径定义（不变） -->
    <route id="route_ns" edges="n_t t_s"/>
    <route id="route_nw" edges="n_t t_w"/>
    <route id="route_ne" edges="n_t t_e"/>
    <route id="route_we" edges="w_t t_e"/>
    <route id="route_wn" edges="w_t t_n"/>
    <route id="route_ws" edges="w_t t_s"/>
    <route id="route_ew" edges="e_t t_w"/>
    <route id="route_en" edges="e_t t_n"/>
    <route id="route_es" edges="e_t t_s"/>
    <route id="route_sn" edges="s_t t_n"/>
    <route id="route_se" edges="s_t t_e"/>
    <route id="route_sw" edges="s_t t_w"/>

    <!-- NS 组：6 条路线，15% 货车、85% 私家车 -->
    <!-- 350 veh/h × 15% = 52.5 truck, 297.5 car -->
    <flow id="flow_ns_car"   route="route_ns" begin="0" end="1000" vehsPerHour="297.5"
          departSpeed="max" departPos="base" departLane="best"
          type="car"   priority="5"/>
    <flow id="flow_ns_truck" route="route_ns" begin="0" end="1000" vehsPerHour="52.5"
          departSpeed="max" departPos="base" departLane="best"
          type="truck" priority="4"/>

