<routes>
    <!-- 1. 先定义车辆类型 -->
    <vType id="car"
           accel="2.6" decel="4.5" length="5.0"
           minGap="2.5" maxSpeed="70"
           color="1,0,0"
           guiShape="passenger"/>
    <vType id="truck"
           accel="2.6" decel="4.5" length="5.0"
           minGap="2.5" maxSpeed="70"
           color="0,0,1"
           guiShape="passenger"/>

    <vType id="bus"
           accel="2.6" decel="4.5" length="5.0"
           minGap="2.5" maxSpeed="70"
           color="0,1,0"
           guiShape="passenger"/>
